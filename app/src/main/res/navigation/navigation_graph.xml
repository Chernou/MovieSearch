<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/moviesSearchFragment">

    <fragment
        android:id="@+id/moviesSearchFragment"
        android:name="com.example.moviesearch.ui.movies.MoviesSearchFragment"
        android:label="MoviesSearchFragment" >
        <action
            android:id="@+id/action_moviesSearchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.moviesearch.ui.details.DetailsFragment"
        android:label="DetailsFragment" >
        <action
            android:id="@+id/action_detailsFragment_to_movieCastFragment"
            app:destination="@id/movieCastFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/hold"
            app:popEnterAnim="@anim/hold"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/movieCastFragment"
        android:name="com.example.moviesearch.ui.cast.MovieCastFragment"
        android:label="fragment_movie_cast"
        tools:layout="@layout/fragment_movie_cast" />
</navigation>